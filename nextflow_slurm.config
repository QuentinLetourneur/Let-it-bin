manifest {
    homePage = 'https://gitlab.pasteur.fr/qletourn/Benchmark_binning'
    description = ''
    mainScript = 'benchmark_binning.nf'
}

process {
    executor='slurm'
    queue = 'common,dedicated'
    //clusterOptions='--qos=fast'
    clusterOptions='--qos=hubbioit'
    beforeScript ='source /local/gensoft2/adm/etc/profile.d/modules.sh;module use /pasteur/projets/policy01/Matrix/modules;export PYTHONPATH=$PYTHONPATH:$HOME.local/lib/python2.7/site-packages/;export PATH=/pasteur/homes/qletourn/tools/metabat:$PATH;export R_LIBS=/pasteur/homes/qletourn/R_libs'
    module=
    'gcc/4.9.0:Python/2.7.8:SPAdes/3.10.0:AlienTrimmer/0.4.0:bowtie2/2.2.9:khmer/2.0:clc-assembly-cell/5.0.0:samtools/1.3:hmmer/3.1b2:pplacer/v1.1-alpha18-2:prodigal/2.6.3:CheckM/1.0.7:cd-hit/v4.6.1:MUMmer/3.23:gnuplot/5.0.4:blast+/2.2.40:KronaTools/2.4:prodigal/2.6.3:bedtools/2.25.0:picard-tools/1.94:BamM/1.7.3:MetaCluster/5.1:mgs-canopy/d55ed1a8b825:FragGeneScan/1.30:idba/1.1.1:perl/5.22.0:atlas/3.10.2:R/3.2.3'
    //GroopM/0.3.5:Python/3.6.0:MaxBin/2.2.3'
}

executor {
    name = 'slurm'
    queueSize = 50
}

timeline.enabled = true
trace.enabled = true
dag.enabled = true

