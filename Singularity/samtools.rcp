Boostrap: debootstrap
OSVersion: xenial
MirrorURL: http://us.archive.ubuntu.com/ubuntu/
Include: wget zlib1g zlib1g-dev bzip2 build-essential libncurses5-dev

%post
    mkdir /pasteur
    wget https://github.com/samtools/samtools/releases/download/1.3/samtools-1.3.tar.bz2
    tar -xjf samtools-1.3.tar.bz2
    cd samtools-1.3
    ./configure
    make
    sudo make install

%runscript
    samtools sort -h
