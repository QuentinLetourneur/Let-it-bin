BootStrap: docker
From: ubuntu:16.04

%environment
    export LC_ALL=C

%post
    mkdir /pasteur
    apt update -y
    apt install -y wget zlib1g zlib1g-dev bzip2 build-essential libncurses5-dev
    wget https://github.com/samtools/samtools/releases/download/1.3/samtools-1.3.tar.bz2
    tar -xjf samtools-1.3.tar.bz2
    cd samtools-1.3
    ./configure
    make
    sudo make install
